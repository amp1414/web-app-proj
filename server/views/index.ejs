<!-- views/index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rGgoH2oZ5L2/F7zweIj8a7ur3L2yz1h3+6w3SBml5eI2J7Zua5fNl5On0N" crossorigin="anonymous">
    <title>Web Warriors Merch Store</title>
</head>
<body>
    <div class="container">
        <header class="my-4 text-center">
            <h1>Web Warriors Merch Store</h1>
            <!-- Your Team's Logo here -->
            <img src="path/to/your/logo.png" alt="Web Warriors Logo" class="img-fluid mt-3" style="max-width: 200px;">
        </header>

        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">SignUp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">SignIn</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="my-4">
            <h2 class="text-center mb-4">Featured Merchandise</h2>
            <!-- Display your list of clothing/merch items here -->
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="path/to/item1.jpg" class="card-img-top" alt="Item 1">
                        <div class="card-body">
                            <h5 class="card-title">Item 1</h5>
                            <p class="card-text">Description of Item 1.</p>
                            <a href="#" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <!-- Add more items as needed -->
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-e3wdznHgYVHfOg7KYQy5lwj1OebtUOpHb8h4TJISwxrQK/CqVJyicwE5nEfLz1U7" crossorigin="anonymous"></script>
</body>
</html>
